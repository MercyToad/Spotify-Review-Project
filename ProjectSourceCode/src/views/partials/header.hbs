{{!--
  Header partial
  - Contains: logo, main navigation links, search input, and user profile menu.
  - Included in `main.hbs` layout via `{{> header}}`.
--}}
<header class="site-header">
  <div class="header-container">
    
    {{!-- Logo and title (left) --}}
    <!-- Logo and Title -->
    <a href="/home" class="header-logo">
      <div class="logo-icon">
        <!-- Inlined "Music" icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 18V5l12-2v13"></path>
          <circle cx="6" cy="18" r="3"></circle>
          <circle cx="18" cy="16" r="3"></circle>
        </svg>
      </div>
      <span class="logo-text">SongRate</span>
    </a>

    {{!-- Top navigation links (center) --}}
    <!-- Navigation Links -->
    <nav class="site-nav">
      <a href="/home">Home</a>
      <a href="/my-reviews">My Reviews</a>
      <a href="/discover">Discover</a>
    </nav>

    {{!-- Search input (middle) --}}
    <!-- Search Bar -->
    <div class="header-search">
      <!-- Inlined "Search" icon -->
      <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="11" cy="11" r="8"></circle>
        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
      <form id="search-form">
        <input type="text" id="search-input" placeholder="Search songs, artists, albums..." autocomplete="off" class="search-input">
      </form>
      <div id="search-results-dropdown" class="profile-menu active dropdown-content" style="display:none">

      </div>
    </div>

    {{!-- Profile icon and dropdown menu (right) --}}
    <!-- Profile Icon with Accordion Menu -->
    <div class="header-profile-container">
      <div class="header-profile" id="profileBtn" role="button" tabindex="0" aria-expanded="false" aria-haspopup="true" aria-label="User menu">
        <!-- Inlined "User" icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
      </div>
      
      <!-- Accordion Menu -->
      {{!-- Dropdown menu for quick links (My Profile, My Reviews, Settings, Login) --}}
      <div class="profile-menu" id="profileMenu" role="menu" aria-hidden="true">
        <a href="/profile" class="profile-menu-item" role="menuitem">
          <span>My Profile</span>
        </a>
        <a href="/my-reviews" class="profile-menu-item" role="menuitem">
          <span>My Reviews</span>
        </a>
        <a href="/settings" class="profile-menu-item" role="menuitem">
          <span>Settings</span>
        </a>
        <hr class="profile-menu-divider" />
        <button type="button" id="openAuthModal" class="profile-menu-item logout" role="menuitem">
          <span>Login</span>
        </button>
      </div>
    </div>
</header>

