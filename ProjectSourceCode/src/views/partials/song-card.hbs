<article onclick="window.location.href = `/my-reviews?song_id={{track.id}}`" class="discover-container glass-card">
    <div class="cover-placeholder">
        <img src="{{track.album.images.[0].url}}" alt="{{track.name}}">
    </div>
    <div>
        <h3 class="song-title">{{track.name}}</h3>
        <p class="meta-muted">{{track.artists.[0].name}}</p>
    </div>
    <div class="card-footer">
        <span class="rating-badge">â˜… 4.5</span>
        <span class="review-count muted-small">234 reviews</span>
    </div>
</article>