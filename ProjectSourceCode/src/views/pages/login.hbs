{{!--
  Login page
  - Simple login form that posts to /login. Uses Bootstrap classes for inputs and buttons.
  - The optional `{{> message}}` partial can display flash messages (kept commented).
--}}

<div style="width:60%; margin:6% auto">
  <form action="/login" method="POST">
  <h1>
    Login
  </h1>
    <div class="form-group">
      <label for="exampleUsername">Username</label>
      <input type="text" class="form-control" name="username">
    </div>

    <!-- Error Message -->
    {{#if error}}
      <div class="error-message">{{error}}</div>
    {{/if}}

    <!-- Login Form -->
    <form action="/login" method="POST" class="auth-form">
      <div class="form-group">
        <label for="username">Username</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          placeholder="Enter your username"
          required
          class="form-input"
        />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          placeholder="Enter your password"
          required
          class="form-input"
        />
      </div>

      <button type="submit" class="btn-primary">Login</button>
    </form>

    <!-- Register Link -->
    <div class="auth-footer">
      <p>Don't have an account? <a href="/register" class="auth-link">Register here</a></p>
    </div>
  </div>
</div>